<?xml version="1.0" encoding="UTF-8"?>
<Context> 
<Resource name="jdbc/core-db"
      auth="Container"
      type="javax.sql.DataSource"
      factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
      testWhileIdle="true"
      testOnBorrow="true"
      maxActive="5"
      maxIdle="20"
      minIdle="5"
      maxWait="300"
      initialSize="5"
      removeAbandonedTimeout="120"
      removeAbandoned="false"
      logAbandoned="false"
      username="root"
      password="admin"
      driverClassName="com.mysql.jdbc.Driver"
      url="jdbc:mysql://127.0.0.1:3306/qa-core?autoReconnect=true"
      validationQuery="SELECT 1"
/>
</Context>
